<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <a href="/new">New Message</a>

  <% if (messages.length> 0) {%>
    <% messages.map((message)=> {%>
      <div>
        <h3>
          <%= message.user %>
        </h3>
        <p>
          <%= message.text %>
        </p>
        <p>
          <%= message.added %>
        </p>
      </div>
      <hr>
      <%})%>
        <%}%>
</body>

</html>